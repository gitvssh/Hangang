<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >



    <android.support.v4.widget.DrawerLayout
        android:id="@+id/draw_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start"

        >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/arc"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp">


                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/rollpagerview"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    app:rollviewpager_play_delay="3000" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/mainfont"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>




            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="@string/notice"
                android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/MainButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius"
                        android:backgroundTint="#074ca9"
                        android:src="@drawable/imagebtn01" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/btn1"
                        android:textColor="#c8ffffff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/MainButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius"
                        android:backgroundTint="#febe10"
                        android:src="@drawable/imagebtn02" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/btn2"
                        android:textColor="#c8ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/MainButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius"
                        android:backgroundTint="#84cb08"
                        android:src="@drawable/imagebtn03" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/btn3"
                        android:textColor="#c8ffffff" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="@string/today"
                android:textColor="#ffffff" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TableRow>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/main02"
                        android:id="@+id/main_today1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:layout_marginTop="72dp"
                            android:background="#88868484"
                            android:text="@string/han1"
                            android:textAlignment="center"
                            android:textColor="#ffffff" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/main03"
                        android:id="@+id/main_today2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:layout_marginTop="72dp"
                            android:background="#88868484"
                            android:text="@string/han2"
                            android:textAlignment="center"
                            android:textColor="#ffffff" />
                    </FrameLayout>
                </TableRow>

                <TableRow>

                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/main04"
                        android:id="@+id/main_today3">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:layout_marginTop="72dp"
                            android:background="#88868484"
                            android:text="@string/han3"
                            android:textAlignment="center"
                            android:textColor="#ffffff" />
                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/main05"
                        android:id="@+id/main_today4">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="18dp"
                            android:layout_marginTop="72dp"
                            android:background="#88868484"
                            android:text="@string/han4"
                            android:textAlignment="center"
                            android:textColor="#ffffff" />
                    </FrameLayout>


                </TableRow>


            </TableLayout>

        </LinearLayout>

    </ScrollView>
        <android.support.design.widget.NavigationView
            android:id="@+id/naviView"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:menu="@menu/menu_drawer"
            android:background="@color/gray"
            android:theme="@style/NavigationView"
            app:itemTextColor="@color/black"
            app:itemIconTint="@color/black"
            >

        </android.support.design.widget.NavigationView>



    </android.support.v4.widget.DrawerLayout>



</LinearLayout>